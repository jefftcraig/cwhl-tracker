<table class="table table-bordered">
  <thead>
    <tr>
        <th class="rank-th">#</th>
        <th class="name-th"><%= sort_link path, "city", "Name" %></th>
        <th><%= sort_link path, "season_id", "Year" %></th>
        <th><%= sort_link path, "games_played", "GP" %></th>
        <th><%= sort_link path, "penalty_minutes", "PIM" %></th>
        <th><%= sort_link path, "minors", "MIN" %></th>
        <th><%= sort_link path, "minors_pg", "MIN/G" %></th>
        <th><%= sort_link path, "double_minors", "DBL" %></th>
        <th><%= sort_link path, "double_minors_pg", "DBL/G" %></th>
        <th><%= sort_link path, "majors", "MAJ" %></th>
        <th><%= sort_link path, "majors_pg", "MAJ/G" %></th>
        <th><%= sort_link path, "fights", "FIGHT" %></th>
        <th><%= sort_link path, "fights_pg", "FIGHT/G" %></th>
        <th><%= sort_link path, "misconducts", "MISC" %></th>
        <th><%= sort_link path, "misconducts_pg", "MISC/G" %></th>
        <th><%= sort_link path, "game_misconducts", "gMISC" %></th>
        <th><%= sort_link path, "game_misconducts_pg", "gMISC/G" %></th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 + ((@page - 1) * 50) %>
    <% teams.each do |team| %>
      <tr>
        <td class="rank-tb"><%= i %></td>
        <td class="name-tb"><%= link_to team.full_name, team_path(team.team_id) %></td>
        <td><%= @season_range == false ? team.season : season %></td>
        <td><%= team.games_played %></td>
        <td><%= team.penalty_minutes %></td>
        <td><%= team.minors %></td>
        <td><%= team.minors_pg %></td>
        <td><%= team.double_minors %></td>
        <td><%= team.double_minors_pg %></td>
        <td><%= team.majors %></td>
        <td><%= team.majors_pg %></td>
        <td><%= team.fights %></td>
        <td><%= team.fights_pg %></td>
        <td><%= team.misconducts %></td>
        <td><%= team.misconducts_pg %></td>
        <td><%= team.game_misconducts %></td>
        <td><%= team.game_misconducts_pg %></td>
      </tr>
      <% i += 1 %>
    <% end -%>
  </tbody>
</table>
