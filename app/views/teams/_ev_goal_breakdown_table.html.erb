<table class="table table-bordered">
	  <thead>
	    <tr>
	    	<th class="rank-th">#</th>
				<th class="name-th"><%= sort_link path, "city", "Name" %></th>
      	<th><%= sort_link path, "season_id", "Year" %></th>
	      <th><%= sort_link path, "games_played", "GP" %></th>
	      <th><%= sort_link path, "gf_5v5", "5v5GF" %></th>
	      <th><%= sort_link path, "ga_5v5", "5v5GA" %></th>
	      <th><%= sort_link path, "gf_p_5v5", "5v5GF%" %></th>
	      <th><%= sort_link path, "gf_4v4", "4v4GF" %></th>
	      <th><%= sort_link path, "ga_4v4", "4v4GA" %></th>
	      <th><%= sort_link path, "gf_p_4v4", "4v4GF%" %></th>
	      <th><%= sort_link path, "gf_3v3", "3v3GF" %></th>
	      <th><%= sort_link path, "ga_3v3", "3v3GA" %></th>
	      <th><%= sort_link path, "gf_p_3v3", "3v3GF%" %></th>
	    </tr>
	  </thead>
	<tbody>
		<% i = 1 + ((@page - 1) * 50) %>
		<% teams.each do |team| %>
			<tr>
				<td class="rank-tb"><%= i %></td>
				<td class="name-tb"><%= link_to team.full_name, team_path(team.team_id) %></td>
				<td><%= season == false ? team.season : season %></td>
				<td><%= team.games_played %></td>
				<td><%= team.gf_5v5 %></td>
				<td><%= team.ga_5v5 %></td>
				<td><%= team.gf_p_5v5 == nil ? "NaN" : "#{team.gf_p_5v5}%" %></td>
				<td><%= team.gf_4v4 %></td>
				<td><%= team.ga_4v4 %></td>
				<td><%= team.gf_p_4v4 == nil ? "NaN" : "#{team.gf_p_4v4}%" %></td>
				<td><%= team.gf_3v3 %></td>
				<td><%= team.ga_3v3 %></td>
				<td><%= team.gf_p_3v3 == nil ? "NaN" : "#{team.gf_p_3v3}%" %></td>
			</tr>
		<% i += 1 %>
		<% end -%>
	</tbody>
</table>
