<table class="table table-bordered">
	  <thead>
	    <tr>
	    	<th class="rank-th">#</th>
				<th class="name-th"><%= sort_link path, "city", "Name" %></th>
      	<th><%= sort_link path, "season_id", "Year" %></th>
	      <th><%= sort_link path, "games_played", "GP" %></th>
	      <th><%= sort_link path, "gf_5v4", "5v4GF" %></th>
	      <th><%= sort_link path, "ga_5v4", "5v4GA" %></th>
	      <th><%= sort_link path, "gf_5v3", "5v3GF" %></th>
	      <th><%= sort_link path, "ga_5v3", "5v3GA" %></th>
	      <th><%= sort_link path, "gf_4v3", "4v3GF" %></th>
	      <th><%= sort_link path, "ga_4v3", "4v3GA" %></th>
	    </tr>
	  </thead>
	<tbody>
		<% i = 1 + ((@page - 1) * 50) %>
		<% teams.each do |team| %>
			<tr>
				<td class="rank-tb"><%= i %></td>
				<td class="name-tb"><%= link_to team.full_name, team_path(team.team_id) %></td>
				<td><%= season == false ? team.season : season %></td>
				<td><%= team.games_played %></td>
				<td><%= team.gf_5v4 %></td>
				<td><%= team.ga_5v4 %></td>
				<td><%= team.gf_5v3 %></td>
				<td><%= team.ga_5v3 %></td>
				<td><%= team.gf_4v3 %></td>
				<td><%= team.ga_4v3 %></td>
			</tr>
		<% i += 1 %>
		<% end -%>
	</tbody>
</table>
