<table class="table table-bordered">
  <thead>
    <tr>
      <th class="rank-th">#</th>
      <th class="name-th"><%= sort_link path, "opponent_abbreviation", "Game" %></th>
      <th><%= sort_link path, "game_date", "Date" %></th>
      <th><%= sort_link path, "won", "Result" %></th>
      <th><%= sort_link path, "shots_for", "SF" %></th>
      <th><%= sort_link path, "shots_against", "SA" %></th>
      <th><%= sort_link path, "goals_for", "GF" %></th>
      <th><%= sort_link path, "goals_against", "GA" %></th>
      <th><%= sort_link path, "ev_goals", "EVGF" %></th>
      <th><%= sort_link path, "ev_goals_against", "EVGA" %></th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% @games.each do |game| %>
      <tr>
        <td class="rank-tb"><%= i %></td>
        <td class="name-tb"><%= link_to game.game_abbreviation, game_path(game.game) %></td>
        <td><%= game.game_date.strftime("%m/%d/%Y") %></td>
        <td><%= game.result %></td>
        <td><%= game.shots_for %></td>
        <td><%= game.shots_against %></td>
        <td><%= game.goals_for %></td>
        <td><%= game.goals_against %></td>
        <td><%= game.ev_goals %></td>
        <td><%= game.ev_goals_against %></td>
      </tr>
      <% i += 1 %>
    <% end -%>
  </tbody>
</table>
