<table class="table table-bordered">
  <thead>
    <tr>
      <th class="rank-th">#</th>
      <th class="name-th"><%= sort_link path, "last_name", "Name" %></th>
      <th><%= sort_link path, "season_age", "Age" %></th>
      <th><%= sort_link path, "shoots", "H" %></th>
      <th><%= sort_link path, "team_id", "Team" %></th>
      <th><%= sort_link path, "position", "POS" %></th>
      <th><%= sort_link path, "games_played", "GP" %></th>
      <th><%= sort_link path, "shootout_attempts", "ATT" %></th>
      <th><%= sort_link path, "shootout_goals", "G" %></th>
      <th><%= sort_link path, "shootout_game_winners", "GW" %></th>
      <th><%= sort_link path, "shootout_percent", "SO%" %></th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 + ((@page - 1) * 50) %>
    <% players.each do |player| %>
      <tr>
        <td class="rank-tb"><%= i %></td>
        <td class="name-tb"><%= player.is_rookie_star %><%= link_to player.full_name, player_path(player.player_profile) %></td>
        <td><%= player.season_age %></td>
        <td><%= player.shoots %></td>
        <td><%= player.team_abbreviation %></td>
        <td><%= player.position %></td>
        <td><%= player.games_played %></td>
        <td><%= player.shootout_attempts %></td>
        <td><%= player.shootout_goals %></td>
        <td><%= player.shootout_game_winners %></td>
        <td><%= player.shootout_percent ? "#{player.shootout_percent}%" : nil %></td>
      </tr>
      <% i += 1 %>
    <% end -%>
  </tbody>
</table>
